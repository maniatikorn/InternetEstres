@import '../css/normalize.css'
@import '../iconos/flaticon.css'

aClaro=#40c0cb
aFuerte=#00a8c6
vClaro=#aee239
vFuerte=#8fbe00
hueso=#f9f2e7
gris=#5b5b5f

body
	background hueso
	font-family 'Roboto', sans-serif
	font-size 16px
	font-weight 100

header
	background aFuerte
	color hueso
	font-size 16px
	overflow: hidden

header figure img
	display inline-block
	float left
	padding 1em 0em 1em 1em
	margin 0
	width 80px

header h1
	font-family 'Roboto', sans-serif
	font-size 23px
	font-weight 400
	margin 0
	padding 0

header h2
	font-family 'Roboto', sans-serif
	font-size 14px
	font-weight 100
	margin 0 1em

h3
	font-weight 400

nav
	background aClaro
	display inline-block
	margin 0
	padding 0
	width 100%
	text-align center

nav ul
	padding 0
	margin 0

nav ul li
	display inline-block
	margin 0
	padding 0
	text-decoration none

nav ul li a
	color hueso
	display inline-block
	font-size 1.2em
	font-weight 100
	padding .4em .6em
	&:hover
		color black

footer
	width 100%
	background vFuerte
	display inline-block
	margin 0
	padding 0
	text-align center
	color hueso

section article ul 
	padding 0
	margin 0

section article ul li
	display inline-block
	margin 0
	padding 0
	text-decoration none
	font-size 1em	
	
.container1
	margin 0
	padding 0
	width 100%

section article .icon
	font-size 4em

.nombre
	display inline-block
	margin 1em 1em 0 1em

.lema
	display inline-block

.quienes
	width 93%
	margin auto
	line-height 1.5em